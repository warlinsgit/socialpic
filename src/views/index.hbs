<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="fa fa-image"></i> Upload Image
    </h3>
  </div>
  <div class="card-body">

    <form action="/images" method="post" enctype="multipart/form-data">

      <div class="form-group">

        <div class="input-group">
          <div class="custom-file">
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
            <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>


          </div>
        </div>
      </div>

      <div class="form-group">

        <input type="text" name="title" class="form-control" placeholder="Title for the image">
      </div>

      <div class="form-group">

        <textarea name="description" id="" class="form-control" placeholder="description" required></textarea>
      </div>

      <div class="form-group">

        <button class="btn btn-light">
          <i class="fa fa-upload"></i> Upload Image
        </button>
      </div>

    </form>

  </div>
</div>
<div class="card">
  <div class="card-header bg-dark text-white">
    <h3><i class='far fa-images'></i> Recent Uploads</h3>
  </div>

  <div class="card-body">
    <div class="row">
      {{#each images}}

        <div class="col-md-4">
          <a href="/images/{{uniqueId}}">

            <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
          </a>
        </div>

      {{/each}}
    </div>

  </div>
</div>
