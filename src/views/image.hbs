<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">

    <h2>{{image.title}}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
      <i class="fa fa-times"></i>Delete
    </button>
  </div>
  <div class="card-body">

    <p>{{image.description}}</p>

    <div class="text-center">

        <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">

    <button type="button" class="btn btn-success" id="btn-like" data-id="{{image.filename}}" >
      <i class="fa fa-thumbs-up"></i> like
    </button>
    <p>
      <span class="likes-count">{{image.likes}}</span>
      <i class="fa fa-heart"></i>
    </p>

    <p>

      <i class="fa fa-eye"></i> {{image.views}}
    </p>
    <p>
      <i class="fa fa-clock-o"></i>
      {{timeago image.timestamp}}
    </p>

  </div>
</div>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
    <button type="button" name="button" class="btn btn-info" id="btn-toggle-comment">
      <i class="fas fa-comment"></i> Post a Comment
    </button>
  </div>
  <div class="card-body">
    <blockquote id="post-comment">


      <form action="/images/{{ image.uniqueId }}/comment" method="POST">

          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="name">
          </div>

          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email">
          </div>

          <div class="form-group">
            <textarea name="comment"  rows="2" class="form-control" placeholder="Your Comment"></textarea>
          </div>

          <div class="form-group">
            <button class="btn btn-success"  id="btn-comment">
              <i class="fa fa-comment"></i> Post
            </button>
          </div>



      </form>

    </blockquote>

    <ul class="list-group p-4 ">
        {{#each comments}}

      <li class="list-group-item ">
        <div class="row">
          <a href="#" class="col ">
            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
          </a>
          <blockquote class="col" >
            <p class="lead">{{comment}}</p>
            <footer class="blockquote-footer">{{name}}  - {{timeago timestamp}}</footer>
          </blockquote>
        </div>
      </li>

        {{/each}}
    </ul>
  </div>
</div>
